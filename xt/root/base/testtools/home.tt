    <div id="no_payment_details" class="no_section">
        <h2>Payment Details</h2>
        <table>
            <tr>
                    <th><label for="no_payment_type">Payment Type</label></th>
                    <td>
                    <select id="no_payment_type">
                        <option value="Store Credit">Store Credit</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th><label for="no_auth_code">Auth code</label></th>
                <td><input id="no_auth_code" type="text" /></td>
