            <tr>
                <th><label for="no_billing_address_line3">Line 3:</label></th>
                <td><input id="no_billing_address_line3" type="text" /></td>
            </tr>
            <tr>
                <th><label for="no_billing_address_city">City:</label></th>
                <td><input id="no_billing_address_city" type="text" /></td>
            </tr>
            <tr>
                <th><label for="no_billing_address_division">Division:</label></th>
                <td><input id="no_billing_address_division" type="text" /></td>
            </tr>
            <tr>
                <th><label for="no_billing_address_postcode">Post Code:</label></th>
                <td><input id="no_billing_address_postcode" type="text" /></td>
            </tr>
            <tr>
                <th><label for="no_billing_address_country">Country:</label></th>
                <td><input id="no_billing_address_country" type="text" /></td>
            </tr>
        </table>
    </div>

    <div id="no_order_items_d" class="no_section">
        <h2 style="display: inline">Order Items</h2>
        <button id="no_add_order_items">+</button>
    </div>

     <div id="no_promotion_line_items" class="no_section">
        <h2 style="display: inline">Promotion line items</h2>
