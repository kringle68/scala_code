<div id="contentLeftCol" [% IF fullwidthcontent == 1 %]class="[% 'fullWidthContent' IF fullwidthcontent == 1 %]"[% END %]>
    [% IF sidenav_form %]
        <form name="sidenav_form" action="[% sidenav_form.action %]" method="get">
            <input type="text" name="[% sidenav_form.param %]" value="" size="11"> <input type="submit" class="button" value="&gt;">
        </form>
    [% END %]
    [% IF sidenav.size %]
        <ul>
            [% FOREACH navsection = sidenav %]
                [% FOREACH side_section = navsection.keys %]
                    [% IF side_section != "None" %]
                        <li><span>[% side_section %]</span></li>
                    [% END %]
                [% END %]
                [% FOREACH link = navsection.$side_section %]
                    [%-
                        SET class = '';
                        SET class_sep = '';
                        IF loop.last;
                            class = 'last'
                            class_sep = ' ';
                        END;
                        IF link.popup;
                            class = class _ class_sep _ '_xt_popup_' _ link.popup;
                        END;
                    -%]
                    <li><a [% IF link.id %][% 'id="' _ link.id _ '"' %][% END %] href="[% link.url %]"[% ' class="' _ class _ '"' IF class %]>[% link.title %]</a></li>

                [% END %]
            [% END %]
        </ul>
    [% END %]
</div>
