                        <p class="error_msg">
                            FATAL ERROR: [% xt_error.message.FATAL %]
                        </p>
                        <p class="warning">Unable to continue ...</p>
                    [% ELSE %]
                        [% IF xt_error.message.DEBUGMSG %]
                            <p class="debug">[% xt_error.message.DEBUGMSG %]</p>
                        [% END %]
                        [% IF xt_error.message.INFO %]
                            <p class="info">[% xt_error.message.INFO %]</p>
                        [% END %]
                        [% IF error_msg %]
                            <p class="error_msg">[% error_msg %]</p>
                        [% END %]
                        [% IF xt_error.message.SUCCESS %]
                            <p class="display_msg">[% xt_error.message.SUCCESS %]</p>
                        [% ELSIF display_msg %]
                            <p class="display_msg">[% display_msg %]</p>
                        [% END %]

                        [% IF xt_error.message.WARN %]
                            <p class="error_msg">[% xt_error.message.WARN %]</p>
                        [% END %]

                        [% content %]
                    [% END %]
                </div>
           
