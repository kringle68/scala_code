<span class="title title-[% channel_config.$sales_channel %]">Shipment Items</span><br>
<table class="data wide-data divided-data">
    <thead>
	<tr>
            <th>SKU</th>
            <th>Name</th>
            <th>Designer</th>
            <th>Size</th>
            <th>Status</th>
            <th>Unit Price</th>
            <th>Tax</th>
            <th>Duties</th>
            <th>Sub-Total</th>
	</tr>
    </thead>
    <tbody>
	[% FOREACH itemid = ship_items.keys %]

            [% class = "" %]

            [% IF ship_items.$itemid.shipment_item_status_id == SHIPMENT_ITEM_STATUS__CANCEL_PENDING
                || ship_items.$itemid.shipment_item_status_id == SHIPMENT_ITEM_STATUS__CANCELLED
                || ship_items.$itemid.shipment_item_status_id == SHIPMENT_ITEM_STATUS__LOST
                || ship_items.$itemid.shipment_item_status_id == SHIPMENT_ITEM_STATUS__UNDELIVERED %]
                    [% class = " class=\"light\"" %]
            [% END %]

            <tr>
                    <td[% class %]><a href="javascript://" onClick="window.open('[% ship_items.$itemid.image %]','viewimage','width=240,height=345,scrollbars=no');" class="noline">[% ship_items.$itemid.sku %]</a></td>
                    <td[% class %]>[% ship_items.$itemid.name %]</td>
                    <td[% class %]>[% ship_items.$itemid.designer %]</td>
                    <td[% class %]>[% ship_items.$itemid.size %]</td>
                    <td[% class %]><span class="highlight">[% ship_items.$itemid.status %]</td>
                    <td[% class %] align="right">[% ship_items.$itemid.unit_price %]</td>
                    <td[% class %] align="right">[% ship_items.$itemid.tax %]</td>
                    <td[% class %] align="right">[% ship_items.$itemid.duty %]</td>
                    <td[% class %] align="right">[% ship_items.$itemid.sub_total %]</td>
            </tr>
	[% END %]

	<tr>
		<td class="blank" colspan="8" align="right"><b>Shipping</td>
		<td class="blank" align="right"><b>[% ship_info.shipping_charge %]</td>
	</tr>
	<tr>
		<td class="blank" colspan="8" align="right"><b>Shipment Total</td>
		<td class="blank" align="right"><b>[% ship_info.shipment_total %]</td>
	</tr>
    </tbody>
</table>
