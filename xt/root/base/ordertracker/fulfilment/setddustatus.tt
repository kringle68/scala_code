


<form name="acceptDDUcharges" action="/Fulfilment/DDU/UpdateDDUStatus" method="post" onSubmit="return double_submit()">
    [% INCLUDE page_elements/forms/dbl_submit_token.tt %]
    <input type="hidden" name="shipment_id" value="[% shipment_id %]">
    <input type="hidden" name="order_id" value="[% order_id %]">
    <input type="hidden" name="customer_id" value="[% order.customer_id %]">
    <input type="hidden" name="sub_section" value="[% subsection %]">
<span class="title title-[% channel_config.$sales_channel %]">DDU Authorisation</span><br>
<table width="100%" cellpadding="0" cellspacing="0" border="0" class="data">
	<tr>
		<td colspan="4" class="divider"></td>
	</tr>
    <tr>
        <td width="20%" align="right"><b> Authorise Charges:</b>&nbsp;&nbsp;&nbsp;</td>
        <td width="20%">
            <select name="authorise" id="select_ddu_authorisation__dropdown">
                <option value="">Please select DDU Authorisation......</option>
                <option value="authorise_all" >Yes ( and for all future orders )</option>
                <option value="no" >No ( for this order only )</option>
            </select>
        </td>
        <td colspan="2" width="60%"> </td>
    </tr>
	<tr class="send_email">
		<td colspan="4" class="divider"></td>
	</tr>
	<tr class="send_email">
		<td align="right"><b>Send Email Confirmation:</b>&nbsp;&nbsp;&nbsp;</td>
		<td colspan="3">
            <input type="radio" name="sendemail" value="yes" checked>&nbsp;&nbsp;&nbsp;Yes&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="radio" name="sendemail" value="no">&nbsp;&nbsp;&nbsp;No
        </td>
	</tr>
	<tr>
		<td colspan="4" class="divider"></td>
	</tr>
	<tr>
		<td colspan="4" class="blank"><img src="/images/blank.gif" width="1" height="15"></td>
	</tr>
	<tr>
		<td colspan="4" class="blank" align="right">[% INCLUDE page_elements/forms/submit_button.tt %]</td>
	</tr>
</table>
</form>

<br><br><br>


