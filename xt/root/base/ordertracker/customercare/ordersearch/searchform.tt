[%# get the current year %]
[% USE date(format = '%Y') %]
[% current_year = date.format %]


<h3>Free Search</h3>

<form name="searchForm" action="/CustomerCare/OrderSearch/Results">
<table class="wide-data divided-data data">
    <tr>
        <td width="15%" align="right"><strong><label for="search_term">Search Term:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td width="15%"><input type="text" name="search_term" id="search_term" value=""></td>
        <td width="15%" align="right"><strong><label for="search_type">Search Type:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td width="15%">
            <select name="search_type" id="search_type">
                <option value="0">Select...</option>
                <option value="0">--------------------------</option>
                <option value="airwaybill">Airwaybill</option>
                [%- IF prl_rollout_phase %]
                <option value="allocation_id">Allocation ID</option>
                [%- END %]
                <option value="billing_address">Billing Address</option>
                <option value="box_id">Box ID</option>
                <option value="customer_number">Customer Number</option>
                <option value="email">Email Address</option>
                <option value="invoice_number">Invoice Number</option>
                <option value="order_number" selected>Order Number</option>
                <option value="psp_ref">PSP Reference</option>
                <option value="postcode">Postcode/Zipcode</option>
                <option value="pre_order_number">Pre-Order Number</option>
                <option value="product_id">Product ID</option>
                <option value="rpg_number">Return Process Group</option>
                <option value="rma_number">RMA Number</option>
                <option value="shipment_id">Shipment Number</option>
                <option value="shipping_address">Shipping Address</option>
                <option value="sku">SKU</option>
                <option value="telephone_number">Telephone Number</option>
                <option value="0">--------------------------</option>
            </select>
        </td>
        <td width="15%" align="right"><strong><label for="sales_channel_free_search">Sales Channel:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td width="15%">
            <select name="sales_channel" id="sales_channel_free_search">
                <option value="">All</option>
                <option value="">-------------------</option>
                [% FOREACH channel = channels.all %]
                <option value="[% channel.name %]">[% channel.name %]</option>
                [% END %]
                <option value="">-------------------</option>
            </select>
        </td>
    </tr>
</table>
<div class="formrow buttons aftertable">[% INCLUDE page_elements/forms/submit_button.tt %]</div>
</form>
<script type="text/javascript">
<!--
    document.searchForm.search_term.focus();
//-->
</script>
<br />
<br />

<h3>Customer Search</h3>
<form name="searchForm" action="/CustomerCare/OrderSearch/Results">
<input type="hidden" name="search_type" value="customer_name">
<table class="wide-data divided-data data">
    <tr>
        <td width="15%" align="right"><strong><label for="firstname">First Name:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td width="15%"><input type="text" name="firstname" id="firstname" value=""></td>
        <td width="15%" align="right"><strong><label for="surname">Surname:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td width="15%"><input type="text" name="surname" id="surname" value=""></td>
        <td width="15%" align="right"><strong><label for="sales_channel_customer_search">Sales Channel:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td width="15%">
            <select name="sales_channel" id="sales_channel_customer_search">
                <option value="">All</option>
                <option value="">-------------------</option>
                 [% FOREACH channel = channels.all %]
                <option value="[% channel.name %]">[% channel.name %]</option>
                [% END %]
                <option value="">-------------------</option>
            </select>
        </td>
    </tr>
</table>
<div class="formrow buttons aftertable">[% INCLUDE page_elements/forms/submit_button.tt %]</div>
</form>

