<h3>Date Search</h3>
<form name="searchForm" action="/CustomerCare/OrderSearch/Results">
<input type="hidden" name="search_type" value="by_date">
<table class="wide-data divided-data data">
    <tr>
        <td align="right"><strong><label for="day">Day:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td>
        [% days = 1 %]
            <select name="day" id="day">
                [% WHILE days < 32 %]
                    <option value="[% days %]"[% IF days == day %] selected="selected"[% END %]>[% days %]</option>
                    [% days = days + 1 %]
                [% END %]
            </select>
        </td>
        <td align="right"><strong><label for="month">Month:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td>
            [% months = 1 %]
            <select name="month" id="month">
                [% WHILE months < 13 %]
                    <option value="[% months %]"[% IF months == month %] selected="selected"[% END %]>[% months %]</option>
                    [% months = months + 1 %]
                [% END %]
            </select>
        </td>
        <td align="right"><strong><label for="year">Year:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td>
            <select name="year" id="year">
                [% years = 2003 %]
                [% WHILE years <= current_year %]
                    <option value="[% years %]"[% IF years == year %] selected="selected"[% END %]>[% years %]</option>
                    [% years = years + 1 %]
                [% END %]
            </select>
        </td>
        <td>&nbsp;</td>
        <td>
            <input type="radio" id="date_type_order" name="date_type" value="order" checked>&nbsp;<label for="date_type_order">Received</label>&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="radio" id="date_type_dispatch" name="date_type" value="dispatch">&nbsp;<label for="date_type_dispatch">Dispatched</label>
        </td>
        <td align="right"><strong><label for="sales_channel_date_search">Sales Channel:</label>&nbsp;&nbsp;&nbsp;</strong></td>
        <td>
            <select name="sales_channel" id="sales_channel_date_search">
                <option value="">All</option>
                <option value="">-------------------</option>
                [% FOREACH channel = channels.all %]
                <option value="[% channel.name %]" [% IF search_sales_channel == channel.name %] selected[% END %]>[% channel.name %]</option>
                [% END %]
                <option value="">-------------------</option>
            </select>
        </td>
    </tr>
</table>
<div class="formrow buttons aftertable">[% INCLUDE page_elements/forms/submit_button.tt %]</div>
</form>
