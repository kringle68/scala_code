<div id="productComments" style="margin-bottom:15px; [% IF !comments || comments.size == 0 %]display:none[% END %]">
    <table width="100%" cellpadding="0" cellspacing="0" border="0" class="data">
        <tr>
            <td class="blank"><span class="title">Product Comments ([% IF comments.defined && comments.size > 0 %][% comments.size %][% ELSE %]0[% END %])</span></td>
            <td class="blank" align="right">[% IF comments.defined && comments.size > 0 %]<a href="#" onclick="showhide('hideShow_comments'); return(false);">Show/Hide Comments</a>[% END %]</td>
        </tr>
        <tr>
            <td colspan="5" class="divider"></td>
        </tr>
    </table>

    <div style="display: none;" id="hideShow_comments">
        <table width="100%" cellpadding="0" cellspacing="0" border="0" class="data">
            <thead>
            <tr height="24">
                <td width="15%" class="tableheader">&nbsp;&nbsp;Operator</td>
                <td width="20%" class="tableheader">Department</td>
                <td width="20%" class="tableheader">Date</td>
                <td width="40%" class="tableheader">Comment</td>
                <td width="5%" class="tableheader"></td>
            </tr>
            <tr>
                <td colspan="5" class="divider"></td>
            </tr>
            </thead>
            <tbody>
                [% FOREACH comment = comments.keys.nsort.reverse %]
                    <tr height="24">
                        <td width="15%">&nbsp;&nbsp;[% comments.$comment.name %]</td>
                        <td width="20%">[% comments.$comment.department %]</td>
                        <td width="20%">[% comments.$comment.timestamp %]</td>
                        <td width="40%">[% comments.$comment.comment %]</td>
                        <td width="5%">
                            [% IF comments.$comment.operator_id == operator_id %]
                                <a href="/[% section.remove('\W+') %]/[% subsection.replace('&','And').remove('\W+') %]/DeleteProductComment?product_id=[% product.id %]&amp;comment_id=[% comments.$comment.id %]"><img src="/images/icons/cross.png" alt="delete comment" title="Delete Comment" /></a>
                            [% ELSE %]
                                &nbsp;
                            [% END %]
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6" class="divider"></td>
                    </tr>
                [% END %]
            </tbody>
        </table>
    </div>
    <br /><br />
</div>
