[%# 'sitem_info' should contain a 'shipment_item_info' structure for a single shipment item %]
[% IF sitem_info.is_qc_failed %]
    Failure reason: &laquo;[% sitem_info.qc_failure_reason %]&raquo;
    [% IF sitem_info.qc_packer_name %]
        <br/>Packer name: <cite class="packerName">[% sitem_info.qc_packer_name %]</cite>
    [% ELSE %]
        <br/><cite class="packerMissing">Packer name unavailable</cite>
    [% END %]
[% ELSE %]
    Ok
[% END %]
