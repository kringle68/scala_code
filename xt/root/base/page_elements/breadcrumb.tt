[% IF breadcrumb %]
<p class="bc-container">
  <ul class="breadcrumb">
    [% SET i = 2 %]
    [% FOREACH step IN breadcrumb.steps %]
      [% IF step == breadcrumb.current %]
      [% SET class="current-step" %]
      [% ELSE %]
      [% SET class="step-$i" %]
      [% SET i = i + 1 %]
      [% END %]
      <li class="[% class %]"><a href="#">[% step %]</a></li>
    [% END %]
  </ul>
</p>
[% END %]
