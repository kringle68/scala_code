# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET           /                              controllers.Application.index
POST          /box                           controllers.BoxesEndpoint.create

GET           /dc                            controllers.DistributionCentreController.search
POST          /dc                            controllers.DistributionCentreController.create
GET           /dc/:code                      controllers.DistributionCentreController.read(code: String)
PUT           /dc/:code                      controllers.DistributionCentreController.update(code: String)
DELETE        /dc/:code                      controllers.DistributionCentreController.delete(code: String)

PUT           /quantity/inc/:code            controllers.QuantityController.inc(code: String)
PUT           /quantity/dec/:code            controllers.QuantityController.dec(code: String)
GET           /quantity/:code                controllers.QuantityController.read(code: String)

# Routing for Swagger
GET           /swagger/                      controllers.Assets.at(path="/public/swagger/json", file="main.json")
GET           /swagger/*file                 controllers.Assets.at(path="/public/swagger/json", file)
GET           /docs/                         controllers.Assets.at(path="/public/swagger/", file="index.html")
GET           /docs/*file                    controllers.Assets.at(path="/public/swagger/", file)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)
